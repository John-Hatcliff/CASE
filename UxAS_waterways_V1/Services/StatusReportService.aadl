package StatusReportService_Pkg
public
	with CMASI;
	with UXNATIVE;
	with ServiceBase_Pkg;
	
	--------------------------------------------------------------------------------
	-- This service reports the current status of an onboard-running UxAS instance.
	--------------------------------------------------------------------------------
	thread StatusReportService extends ServiceBase_Pkg::ServiceBase
		features
			-- Subscribed Messages
			EntityState : in event data port CMASI::EntityState.i;
			EntityJoin : in event data port UXNATIVE::EntityJoin.i;
			EntityExit : in event data port UXNATIVE::EntityExit.i;
			AutoPilotKeepAlive : in event data port UXNATIVE::AutoPilotKeepAlive.i;
			--Sent Messages
			OnboardStatusReport : out event data port UXNATIVE::OnboardStatusReport;
			
		properties			
            Dispatch_Protocol => Sporadic;
            
	end StatusReportService;	
		
end StatusReportService_Pkg;